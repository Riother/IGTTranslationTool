<Window x:Class="IGTLocalizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IGTLocalizer"
        mc:Ignorable="d"
        Title="JSON Localizer" Height="350" Width="525"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Icon="Assets/logo.ico"
        >
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="60px" MinHeight="20px" MaxHeight="100px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="WindowHeader" Orientation="Horizontal" Grid.Row="0">
            <Image Source="Assets/logo.ico" Margin="5px"/>
            <Label Foreground="#007CAA" FontSize="36" VerticalAlignment="Center" FontWeight="Bold" Content="{Binding Path=Title, Mode=OneWay, FallbackValue='JSON Localizer'}"/>
        </StackPanel>

        <Grid x:Name="UserControls" Grid.Row="1" ShowGridLines="True" Margin="-1,0,1,0">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Height="30" Width="70" Grid.Column="1">Translate</Button>
            <Button Height="30" Width="70" Content="Open File" Click="OpenFile_Button"/>
            <TextBox ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible" IsReadOnly="True" Name="txtEditor" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>

