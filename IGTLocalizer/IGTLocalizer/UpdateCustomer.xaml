<UserControl x:Class="IGTLocalizer.UpdateCustomer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid Height="100">
        <StackPanel Height="50" Orientation="Horizontal">
            <Label VerticalAlignment="Center" FontSize="14" Margin="15,0,0,0" Content="Lottery ID:"/>
            <ComboBox Name="UpdateCustBox" FontSize="14" Width="100" Height="30" Margin="10,0,0,0" SelectionChanged="UpdateCustBox_SelectionChanged"/>
        </StackPanel>
    </Grid>
</UserControl>
