<UserControl x:Class="IGTLocalizer.AddCustomer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid Height="100">
        <StackPanel Height="50" Orientation="Horizontal">
            <Label VerticalAlignment="Center" FontSize="14" Margin="15,0,0,0" Content="Lottery ID:"/>
            <xctk:IntegerUpDown  VerticalAlignment="Center" Name="CustomerID" Height="30" Width="100" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
