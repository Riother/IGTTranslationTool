<UserControl x:Class="IGTLocalizer.JSONProperty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IGTLocalizer"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="180">
    <Grid Height="100">
        <Grid Height="80" Width="160" VerticalAlignment="Top" Margin="10">
            <Grid.Background>
                <SolidColorBrush Color="White"/>
            </Grid.Background>

            <Grid Background="#007CAA" Height="60" Width="150">
                <Border BorderBrush="Black" BorderThickness="2" />
                <Label Foreground="White" Name="property" Content="Demo" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
            </Grid>
            
        </Grid>
    </Grid>
</UserControl>
